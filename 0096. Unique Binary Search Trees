class Solution {
public:
    int numTrees(int n) {
        if (n < 3) {
            return n;
        }
        
        int dp[n+1];    // range "0 - n" -> because we need dp[0] represent 1
        memset(dp,0,sizeof(dp));
        dp[0] = 1;
        dp[1] = 1;
        dp[2] = 2;
        
        for (int i = 2; i <= n; i++) {  // This is the total node numbers 
            int count = 0;
            for (int j = 1; j <= i; j++) {   // j is root of the tree
                count += dp[j-1] * dp[i-j];
            }
            dp[i] = count;
        }
        
        return dp[n];
    }
};
