class Solution {
public:
    int numRollsToTarget(int d, int f, int target) {
        if (target < d) {
            return 0;
        }
        
        int dp[d][target];
        memset(dp,0,sizeof(dp));
        // Initialize
        for (int i = 0; i < target && i < f; i++) {
            dp[0][i] = 1;
        }
        
        // Start
        for (int i = 1; i < d; i++) {
            for (int j = 0; j < target; j++) {
                int count = 0;
                int start  = j - f;
                if (start < 0) {
                    start = 0;
                }
                for (int k = start; k < j; k++) {
                    count += dp[i-1][k];
                    count %= 1000000007;
                }
                dp[i][j] = count;
            }
        }
        
        return dp[d-1][target-1];
        
    }
};
